{
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "one-variable-per-declaration": false,
    "no-increment-decrement": false,
    "brace-style": [
      false,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}